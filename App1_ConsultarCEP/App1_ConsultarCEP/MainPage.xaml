<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1_ConsultarCEP.MainPage">

    <StackLayout Background="#FFBF00" Padding="30" Spacing="30">
        
        <Image Source="Logo.png"  WidthRequest="200" x:Name="LOGO" Margin="10"/>
       
        <Entry Placeholder="Digite o CEP" PlaceholderColor="#FFBF00" BackgroundColor="#FFFFFF" HeightRequest="50" x:Name="CEP"
               />
       
        <Button Text="BUSCAR CEP" TextColor="#FFFFFF" BackgroundColor="#00416B" HeightRequest="50" Margin="10"
                x:Name="BOTAO" WidthRequest="40"/>
        
        <Label Text="" x:Name="RESULTADO"
               VerticalOptions="Center"
               HorizontalOptions="Center">
        </Label>
    </StackLayout>

</ContentPage>
